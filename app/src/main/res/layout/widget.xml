<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:minHeight="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/display"
                    style="@style/Theme.Calculator.Display.Widget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:longClickable="false"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/display_long_clickable"
                    style="@style/Theme.Calculator.Display.Widget"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:contentDescription="@string/del"
                android:src="@drawable/widget_delete" />

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:contentDescription="@string/clear"
                android:src="@drawable/widget_clear" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/digit7"
                    android:tag="seven"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/digit8"
                    android:tag="eight"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/digit9"
                    android:tag="nine"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/div"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_div"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/mul"
                    android:tag="multiplied_by"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_mul" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/digit4"
                    android:tag="four"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/digit5"
                    android:tag="five"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/digit6"
                    android:tag="six"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/minus"
                    android:tag="minus"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_sub" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/digit1"
                    android:tag="one"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/digit2"
                    android:tag="two"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/digit3"
                    android:tag="three"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/plus"
                    android:tag="plus"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/dec_point"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/digit0"
                    android:tag="zero"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/equal"
                    android:tag="equals"
                    style="@style/Theme.Calculator.ButtonStyle.Widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/eq" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
